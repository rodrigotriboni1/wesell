<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddVendaActivity">

    <TextView
        android:id="@+id/textViewValorVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor da Venda" />

    <EditText
        android:id="@+id/editTextValorVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textViewProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Produto" />

    <Spinner
        android:id="@+id/spinnerProdutos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewDataVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data da Venda" />

    <EditText
        android:id="@+id/editTextDataVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false" />

    <TextView
        android:id="@+id/textViewQuantidadeVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantidade da Venda" />

    <EditText
        android:id="@+id/editTextQuantidadeVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonSalvarVenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Salvar Venda" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVendas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>
