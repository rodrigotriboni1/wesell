<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the color for the pressed state -->
    <item android:state_pressed="true" android:color="@color/colorPrimary" />
    <!-- Define the color for the checked state -->
    <item android:state_checked="true" android:color="@color/colorPrimary" />
    <!-- Define the color for the active state -->
    <item android:state_active="true" android:color="@color/colorPrimary" />
    <!-- Define the default color -->
    <item android:color="#8F8F8F" />
</selector>